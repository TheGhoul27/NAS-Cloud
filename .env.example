# Environment variables for development
DATABASE_URL=postgresql://nascloud:nascloud_dev@localhost:5432/nascloud
REDIS_URL=redis://localhost:6379
NAS_STORAGE_PATH=./storage
JWT_SECRET_KEY=your-secret-key-change-in-production-and-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application settings
APP_NAME=NAS-Cloud
APP_VERSION=1.0.0
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File upload settings
MAX_UPLOAD_SIZE=5GB
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "mp4", "avi", "mov", "pdf", "doc", "docx", "txt", "zip"]

# Worker settings
WORKER_PROCESSES=2
WORKER_THREADS=4

# Thumbnail settings
THUMBNAIL_SIZES=[240, 720, 1080]
THUMBNAIL_QUALITY=85
